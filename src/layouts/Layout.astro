---
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  image?: string;
  canonical?: string;
}

const { 
  title, 
  description = "SentinelSecure - Your trusted Managed Service Provider specializing in cybersecurity solutions. Protecting your business from cyber threats with 24/7 monitoring and expert support.",
  keywords = "managed service provider, cybersecurity, IT support, network security, data protection, MSP, cyber threats, business security",
  image = "/SentinelSecure.svg",
  canonical = Astro.url.href 
} = Astro.props;

const fullTitle = title === "Home" ? "SentinelSecure - Cybersecurity MSP" : `${title} | SentinelSecure`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonical} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url).href} />
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="SentinelSecure" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.url).href} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    
    <!-- Schema.org structured data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "SentinelSecure",
        "description": "Managed Service Provider specializing in cybersecurity solutions",
        "url": "https://sentinelsecure.com",
        "logo": "https://sentinelsecure.com/SentinelSecure.svg",
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "customer service",
          "availableLanguage": "English"
        },
        "areaServed": "United States",
        "serviceType": "Managed IT Services, Cybersecurity"
      }
    </script>
  </head>
  <body class="antialiased">
    <slot />
  </body>
</html> 